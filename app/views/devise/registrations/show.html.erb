<h1>ユーザー詳細ページ</h1>
  <table class="detail-table">
    <tbody>
      <tr>
        <th class="detail-item">社員番号</th>
        <td class="detail-value"><%= @user.enployee_nomber %></td>
      </tr>
      <tr>
        <th class="detail-item">名前</th>
        <td class="detail-value"><%= @user.last_name %><%= @user.first_name %></td>
      </tr>
      <tr>
        <th class="detail-item">ニックネーム</th>
        <td class="detail-value"><%= @user.nickname %></td>
      </tr>
      <tr>
        <th class="detail-item">パスワード</th>
        <td class="detail-value"><%= @user.password %></td>
      </tr>

    </tbody>
  </table>